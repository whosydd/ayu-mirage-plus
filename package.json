{
  "name": "ayu-mirage-plus",
  "displayName": "Ayu Mirage Plus",
  "description": "This theme is basic on Ayu Mirage, just for fun! :)",
  "version": "1.4.0",
  "publisher": "GY",
  "repository": {
    "type": "git",
    "url": "https://github.com/whosydd/ayu-mirage-plus"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "ayu",
    "ayu-mirage",
    "ayu-theme"
  ],
  "icon": "icon.png",
  "main": "./dist/extension.js",
  "activationEvents": [
    "onCommand:addTheme",
    "onCommand:resetTheme",
    "onCommand:delTheme"
  ],
  "contributes": {
    "commands": [
      {
        "title": "add theme",
        "command": "addTheme",
        "category": "ayu-mirage-plus"
      },
      {
        "title": "reset theme",
        "command": "resetTheme",
        "category": "ayu-mirage-plus"
      },
      {
        "title": "remove theme",
        "command": "delTheme",
        "category": "ayu-mirage-plus"
      }
    ],
    "themes": [
      {
        "label": "Ayu Mirage Plus",
        "uiTheme": "vs-dark",
        "path": "dist/themes/theme.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Add Theme",
      "properties": {
        "ayu-mirage-plus.addTheme": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "colors"
            ],
            "properties": {
              "name": {
                "type": "string",
                "default": ""
              },
              "colors": {
                "type": "object",
                "properties": {
                  "themeColor": {
                    "type": "string",
                    "format": "color"
                  },
                  "foreground": {
                    "type": "string",
                    "format": "color"
                  },
                  "border": {
                    "type": "string",
                    "format": "color"
                  },
                  "highlight": {
                    "type": "string",
                    "format": "color"
                  }
                }
              }
            }
          },
          "default": [
            {
              "name": "",
              "colors": {
                "themeColor": "#bbffaa",
                "foreground": "#000000",
                "border": "#bbffaa20",
                "highlight": "#8cf173"
              }
            }
          ],
          "description": "Change the theme color you want.",
          "scope": "resource"
        },
        "ayu-mirage-plus.resetTheme": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "colors"
            ],
            "description": "Please refer to the plugin page to reconfigure options!",
            "properties": {
              "name": {
                "type": "string",
                "default": ""
              },
              "colors": {
                "type": "object",
                "properties": {
                  "themeColor": {
                    "type": "string",
                    "format": "color"
                  },
                  "foreground": {
                    "type": "string",
                    "format": "color"
                  },
                  "border": {
                    "type": "string",
                    "format": "color"
                  },
                  "highlight": {
                    "type": "string",
                    "format": "color"
                  }
                }
              }
            }
          },
          "default": [
            {
              "name": "",
              "colors": {
                "themeColor": "#bbffaa",
                "foreground": "#000000",
                "border": "#bbffaa20",
                "highlight": "#8cf173"
              }
            }
          ],
          "description": "Change the theme color you want.",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "rm": "rm -rf dist",
    "mv": "mv ayu-*.vsix extensions/",
    "vsce package": "npm run mv && npm run rm && vsce package"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^15.12.5",
    "@types/vscode": "^1.61.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "copy-webpack-plugin": "^9.0.1",
    "eslint": "^7.19.0",
    "file-loader": "^6.2.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "prettier": "^2.3.2",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  }
}
